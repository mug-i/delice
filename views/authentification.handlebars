<div class="divAuth">
  <h2>{{titre}}</h2>

  <form id="form-auth">
    <label>
      Identifiant:
      <input type="email" id="input-identifiant" />
    </label>

    <label>
      Mot de passe:
      <input type="password" id="input-mot-passe" />
    </label>

    <label>
      Nom:
      <input type="text" id="input-nom" />
    </label>

    <label>
      Prenom:
      <input type="text" id="input-prenom" />
    </label>

    <input type="submit" value="{{bouton}}" />

    <div class="erreur" id="form-erreur"></div>
  </form>
</div>